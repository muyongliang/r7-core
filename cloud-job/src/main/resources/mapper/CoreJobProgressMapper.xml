<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.r7.core.job.mapper.CoreJobProgressMapper">

    <resultMap id="BaseResultMap" type="com.r7.core.job.model.CoreJobProgress">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="user_id" jdbcType="BIGINT" property="userId" />
        <result column="job_code" jdbcType="VARCHAR" property="jobCode" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="progress" jdbcType="VARCHAR" property="progress" />
        <result column="is_distribution" jdbcType="VARCHAR" property="isDistribution" />
        <result column="start_at" jdbcType="VARCHAR" property="startAt" />
        <result column="end_at" jdbcType="INTEGER" property="endAt" />
        <result column="created_by" jdbcType="BIGINT" property="createdBy" />
        <result column="created_at" jdbcType="TIMESTAMP" property="createdAt" />
        <result column="updated_by" jdbcType="BIGINT" property="updatedBy" />
        <result column="updated_at" jdbcType="TIMESTAMP" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, job_code, status, progress, is_distribution,
        start_at, end_at, created_by, created_at, updated_by, updated_at
    </sql>

    <select id="getJobProgressByUserId" parameterType="long" resultMap="BaseResultMap">
        select * from core_job_progress
        where user_id=#{userId}
    </select>

</mapper>